#!/bin/bash

pkgs=($(source PKGBUILD && echo ${pkgname[*]}))

for zst in ${pkgs[*]}
do
    flock /tmp/git.db.lck repo-remove ~/deepincn/$1/os/$(uname -m)/git.db.tar.xz $zst
done

for zst in ${pkgs[*]}
do
    rm -rf ~/deepincn/$1/os/$(uname -m)/$zst*
done

cp -f *.sig ~/deepincn/$1/os/$(uname -m)/ || exit 2
cp -f *.zst ~/deepincn/$1/os/$(uname -m)/ || cp -f *.xz  ~/deepincn/$1/os/$(uname -m)/ || exit 1
